@section MainContent{

    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

              @if (Model.ID == 0)
                {
                    <div class=" control-group">
                        <label class="control-label"><span class="required">*</span>项目：</label>
                        <div class="controls">

                            @Html.DropDownList("ProjectBasedataID")

                        </div>
                    </div>
                }
                else
                {
                    <div class=" control-group">
                        <label class="control-label"><span class="required">*</span>项目：</label>
                        <div class="controls">

                            @Model.ProjectBasedata.PName

                        </div>
                    </div>
                }
           

            <div class="control-group">
                <label class="control-label">工程保修金：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.InsWarranty, new { @class = "m-wrap ",@onchange="format()" })
                    @* <span class="help-inline">元</span>*@
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.InsWarranty)</span>
                   
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">分包工程：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.InsSubcontracting, new { @class = "m-wrap" })
                   
                    @* <span class="help-inline">元</span>*@
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.InsSubcontracting)</span>
                   
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">其他费用：</label>
                <div class="controls">
                
                    @Html.TextBoxFor(m => m.InsOtherBudget, new { @class = "m-wrap " })
                     @*<span class="help-inline">元</span>*@
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.InsOtherBudget)</span>
                   
                </div>
            </div>
              <div class=" control-group">
                    <label class="control-label"><span class="required">*</span>日期：</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Date, new { @class = "m-wrap " })
                        <span class="help-inline">@Html.ValidationMessageFor(m => m.Date)</span>
                    </div>
                </div>
            <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.Remark, new { @class = "m-wrap " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
                   
                </div>
            </div>
        </div>
    </div>
}

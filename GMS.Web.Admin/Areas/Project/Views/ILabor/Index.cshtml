@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.Project.Contract

@model PagedList<InsLaborCost>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
       
    </style>
}



<div class="row-fluid" >
    <div class="span4">
     @* <div>
            <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i>删除</a>
            <a class="btn blue thickbox" title='添加新人工预算' href="@Url.Action("Create")?TB_iframe=true&height=350&width=450"><i class="icon-plus icon-white"></i>新增</a>

        </div>*@
    </div>

    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        { 
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                </label>
                <label>
                    <span>项目名称：</span>
                    @Html.TextBox("ProjectName", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>


@using (Html.BeginForm("Delete", "ProjectBasedata", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>             
                <th>项目名称
                </th>
                <th>泥瓦工费用
                </th>
                <th>拆除人工费用
                </th>
                <th>木工费用
                </th>

                <th>水电工费用
                </th>
                <th>油漆工费用
                </th>
                <th>电焊工费用
                </th>
                <th>钢筋工费用
                </th>
                 <th>搬运工费用
                </th>
                <th>
                    垃圾清理工费
                </th>
                <th>
                    其他费用
                </th>
               
                <th>
                    总额
                </th>
                 <th>
                    备注
                </th>
                <th>操作
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>                  
                    <td>
                        @m.ProjectName
                    </td>
                    <td>
                        @m.Masons
                    </td>
                    <td>
                        @m.TearDown
                    </td>

                    <td>
                        @m.Carpenter
                    </td>

                    <td>
                        @m.Plumbers

                    </td>
                     <td>
                        @m.Painter

                    </td>
                     <td>
                        @m.ELectricWelder

                    </td>
                     <td>
                        @m.Steel

                    </td>
                     <td>
                        @m.Transportor

                    </td>
                     <td>
                        @m.Cleaner

                    </td>
                     <td>
                        @m.OtherLabor

                    </td>
                   
                    <td>
                        @m.LaborTotal
                    </td>
                     <td>
                        @m.OtherDetail
                    </td>


                    <td style="width: 70px">
                        <a class="btn mini purple thickbox" title='编辑分类内容' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=530&width=1000">
                            <i class="icon-edit"></i>
                            编辑
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>


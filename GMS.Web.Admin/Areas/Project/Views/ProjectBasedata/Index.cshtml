@using (Html.BeginForm("Delete", "ProjectBasedata", FormMethod.Post, new { id = "mainForm" }))
{
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            
            <th>
               项目编码
            </th>
            <th>
                项目名称
            </th>
            <th>
                负责人
            </th>
            <th>
               位置
            </th>
            <th>
                面积
            </th>
            <th>
                开工时间
            </th>
            <th>
               工期
            </th>
            <th>
                状态
            </th>
            <th>
                结束日期
            </th>
            
            <th>
               负责人电话
            </th>
            <th>
                项目内容
            </th>
            <th>
                项目规模
            </th>
            <th>

                <label class="control-label">报价：</label>
                <div class="controls" style="width:30%">
                      @Html.TextBoxFor(m => m.ProjPrice, new { @class = "m-wrap small" })
            
                </div>
            
                <label class="control-label">成本预算：</label>
                <div class="controls"  style="width:30%">
               @Html.TextBoxFor(m => m.ProjCostBudget, new { @class = "m-wrap small" })

                </div>
            </div>*@
           <div class="control-group">
                <label class="control-label">工程规模：</label>
                <div class="controls" >
                @Html.TextArea("ProjScale", new { style="width:80%,padding-top:10px"}) 
                </div>
            </div>
         <div class="control-group">
                <label class="control-label">项目内容：</label>
                <div class="controls">
                @Html.TextArea("ProjContent", new { style="width:80%"}) 
                </div>
            </div>
          <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                @Html.TextArea("Remark", new { style="width:80%"}) 
                </div>
            </div>

      

         
    </div>
</div>
}

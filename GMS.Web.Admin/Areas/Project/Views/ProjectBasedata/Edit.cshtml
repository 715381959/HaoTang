@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Project.Contract
@using GMS.Web
@model ProjectBasedata
@{
  
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
      <style type="css/text">
          .control-group{
              width:50%;
              display:inline;
              float:left;
          }
   </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
       
   
   </script>
}
@section MainContent{

  

<div class="portlet-body form-horizontal form-bordered form-row-stripped">
    <div class="row-fluid"> 
              <div class="control-group" style="float:left;width:50%">
                <label class="control-label"><span class="required">项目</span>：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.ProjName, new { @class = "m-wrap large" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjName)</span>
                </div>
            </div>

             <div class="control-group" style="float:left;width:50%">
                <label class="control-label "><span class="required"></span>位置：</label>
                <div class="controls ">
                @Html.TextBoxFor(m => m.ProjLocation, new { @class = "m-wrap large" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjLocation)</span>
                </div>
            </div>
        
            <div class="control-group" style="float:left;width:50%">
                <label class="control-label ">负责人：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.ProjChargeman, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjChargeman)</span>
                </div>
            </div>




            <div class="control-group" style="float:left;width:50%">
                <label class="control-label">联系电话：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.ProjPhone, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.ProjPhone)</span>
                </div>
            </div>
     
     
       


              <div class="control-group"  style="float:left;width:50%">
                <label class="control-label">开工时间：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.ProjStartdate, new { @class = "m-wrap" })
               
                </div>
            </div>

            <div class="control-group" style="float:left;width:50%">
                <label class="control-label" >工期：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Projdate, new { @class = "m-wrap small" })
                <span class="help-inline">@Html.ValidationMessageFor(m => m.Projdate)</span>
                </div>
            </div>

       

           

      
          @*  <div class="control-group">

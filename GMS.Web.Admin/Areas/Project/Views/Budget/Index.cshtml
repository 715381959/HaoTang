@using (Html.BeginForm("Delete", "ProjectBasedata", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th style="width: 8px;">
                    <input type="checkbox" id="checkall" class="group-checkable" />
                </th>

                <th>项目名称
                </th>
                <th>人工费
                </th>
                <th>材料费
                </th>
                <th>机械使用费
                </th>

                <th>其他直接费用
                </th>
                <th>间接费用
                </th>
                <th>工程保修金
                </th>
                <th>分包工程
                </th>
                 <th>其他费用
                </th>
                <th>备注
                </th>

                <th>操作
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
                    </td>

                    <td>
                        @m.ProjectID
                    </td>
                    <td>
                        @m.ProjectName
                    </td>
                    <td>
                        @m.Labour
                    </td>
                    <td>
                        @m.Material
                    </td>

                    <td>
                        @m.MachineryCost
                    </td>

                    <td>
                        @m.Measure

                    </td>
                     <td>
                        @m.Overhead

                    </td>
                     <td>
                        @m.Warranty

                    </td>
                     <td>
                        @m.Subcontracting

                    </td>
                     <td>
                        @m.OtherBudget

                    </td>
                     <td>
                        @m.Remark

                    </td>


                    <td style="width: 70px">
                        <a class="btn mini purple thickbox" title='编辑分类内容' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=530&width=1000">
                            <i class="icon-edit"></i>
                            编辑
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>


@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.Project.Contract

@model PagedList<ProjectCtrl>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span4">
        <div>
            <a class="btn red" id="delete" title='删除选中项' href="javascript:;"><i class="icon-trash icon-white"></i> 删除</a>
            <a class="btn blue thickbox" title='项目采购单' href="@Url.Action("Create")?TB_iframe=true&height=500&width=900"><i class="icon-plus icon-white"></i> 新增</a>
        </div>
    </div>
    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        { 
        <div class="dataTables_filter">
            <label>
                <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
             </label>
            <label>
                <span>单号：</span>
                @Html.TextBox("oddnum", null, new { @class = "m-wrap small" })
            </label>
        </div>
        }
    </div>
</div>

@using (Html.BeginForm("Delete", "ProjectCtrl", FormMethod.Post, new { id = "mainForm" }))
{
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>
                材料名称
            </th>
            <th>
                单号
            </th>
            <th>总价</th>
             <th>
                所属项目
            </th>
            <th>
                创建时间
            </th>
            <th>添加</th>
            <th>
                详情/编辑
            </th>            
           
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>
                <input type="checkbox" class="checkboxes" name='ids' value='@m.ID' />
            </td>
            <td>
                @m.Name
            </td>
            <td>
                NO.@m.oddnum
            </td>
            <td>@m.Total</td>
            <td>
                @m.ProjectBasedata.PName
            </td>
            
            <td>
                @m.CreateTime.ToCnDataString()
            </td>
            <td>
                <a class="btn mini purple thickbox" title='采购单详情，点击保存' href="@Url.Action("Add", new { oddNum = m.oddnum })TB_iframe=true&height=500&width=900">
                    <i class="icon-plus"></i>
                    添加
                </a>
            </td>
          <td>
                <a class="btn mini purple thickbox" title='公司采购单详情，点击保存' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=500&width=900">
                    <i class="icon-edit"></i>
                    详情
                </a>
            </td>
          
        </tr>
        }
    </tbody>
</table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>

@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Project.Contract
@using GMS.Web
@model Odder
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
}
@section PageSpecificJavascriptIncludes{
}
@section MainContent{

<div class="portlet-body form-horizontal form-bordered form-row-stripped">
<div class="container-fluid">
    <div class="row-fluid"> 
           
             <div class="span6 control-group">
             
                <label class="control-label">单号：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.oddnum, new {Readonly = "true" })
                
                </div>
                  
            </div>
            <div class="span6 control-group">
                <label class="control-label">申请人：</label>
                
                <div class="controls">
                @Html.TextBoxFor(m=>m.Buyer,new{@class="m-wrap"})
                </div>

         </div>

    </div>


    <div class="row-fluid"> 
            <div class="span6 control-group">
                
               
                @if(Model.ID!=0){
                <label class="control-label">金额：</label>
                <div class="controls">
                @Html.TextBoxFor(m => m.Total, new {Readonly = "true" })
                
                </div>
                }
                
                
         </div>
          <div class="span6 control-group">
          <label class="control-label">部门：</label>
                
                <div class="controls">
                @Html.TextBoxFor(m=>m.Department,new{@class="m-wrap"})
                </div>
          </div>

    </div>

    <div class="row-fluid"> 
            <div class="span6 control-group">
                
                 <label class="control-label">批准人：</label>
                
                <div class="controls">
                @Html.TextBoxFor(m=>m.Approver,new{@class="m-wrap"})
                </div>
                </div>
                <div class="span6 control-group">
                <label class="control-label">核准人：</label>
             
                <div class="controls">
                @Html.TextBoxFor(m=>m.Authorizer,new{@class="m-wrap"})
                </div>
            </div>
         <div class="row-fluid">
            <div class="span6 control-group">
                <label class="control-label">是否审批：</label>
                    <div class="controls">
                      @Html.CheckBoxFor(m => m.IsPro)
                    </div>
             </div>
            <div class="span6 control-group">
                <label class="control-label">是否达标：</label>
                <div class="controls">
                      @Html.CheckBoxFor(m => m.IsStandard)
                </div>
                 
           </div>

        </div>
    </div>
    <div class="row-fluid"> 
            <div class="control-group">
                
                
                <label class="control-label">备注：</label>
                
                <div class="controls">
                @Html.TextAreaFor(m=>m.Authorizer,new { style="height:215px;width:500px"})
                </div>

           </div>

    </div>
</div>

</tr>
}
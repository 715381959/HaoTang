@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Account.Contract
@using GMS.Account.Contract
@using GMS.BasisData.Contract
@model Supplier
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>企业名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Name, new { @class = "m-wrap" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">联系人：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Contactor, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Contactor)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">联系方式：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Contact, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Contact)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">传真：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Fax, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Fax)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">邮箱：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Email, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">地址：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Address, new { @class = "m-wrap" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Address)</span>
                </div>
            </div>

        </div>
    </div>
}

